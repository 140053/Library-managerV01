<div class="container mt-2">
    <div class="row">
        <div class="col-lg-4 col-md-8 col-sm-12">
            <ul class="list-group">
                <li class="list-group-item">Statistics Generation</li>

            </ul>

            <form method="post" action="/statistics">
                <div class="form-group ">

                    <label for="exampleInputEmail1">Type:</label>
                    <select name="type" id="cars" class="form-control" required>
                        <option value="">....</option>
                        <!--option value="books">Books</option-->
                        <option value="thesis">Thesis</option>
                        <option value="serials">Serials</option>
                        <!--option value="patron">Patron</option-->
                    </select>
                </div>
                <div class="form-group ">
                    <label for="exampleInputEmail1">Date:</label>
                    <input name="from" type="month" class="form-control" id="exampleInputEmail1"  required>

                </div>
                <!--div class="form-group">
                    <label for="exampleInputPassword1">To:</label>
                    <input name="to" type="date" class="form-control" id="exampleInputPassword1"  required>
                </div-->

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-lg-8 col-md-4 col-sm-12">


            <table class="table table-striped table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Resources</th>
                    <th scope="col">Total</th>

                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row">1</th>

                    <td>  <%= table.table %></td>
                    <td> <%= total.Total  %></td>

                </tr>

                </tbody>
            </table>
        </div>

    </div>
</div>