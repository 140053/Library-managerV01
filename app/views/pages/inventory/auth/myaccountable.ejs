<div class="row mt-3">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="card text-white bg-secondary mb-3">
            
            <div class="card-header">
                <ul class="list-group ">
                  <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-dark">
                    <%= name %> Accountability ( <%= office %>  )
                    <p class="d-none officenamu"> <%= office %> </p>
                    
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button  class="btn btn-success myaccbtn "  >Add Items</button>
                      
                       
                      </div>
                  </li>                           
                </ul>
              </div>
            
            <div class="card-body">


                <div class="">
                    <style>
                        .accordion {
                                                                   
                            cursor: pointer;
                            padding: 10px;
                            width: 100%;
                            border: none;
                            text-align: left;
                            outline: none;
                            font-size: 9px;
                            transition: 0.4s;
                        }
                        
                        .accordion:hover {
                            background-color: #ccc; 
                        }
                        
                        .panel {
                            padding: 0 18px;
                            display: none;
                            background-color: white;
                            overflow: hidden;
                        }
                    </style>

                       
                      
                    <div class="">
                      
                            <button  class="accordion d-flex justify-content-between align-items-center" > Items
                               
                                &nbsp; 
                                <span class="badge badge-pill badge-secondary  " data-toggle="tooltip" data-placement="top" title="">?</span> 
                            </button>
                             <div class="panel">
                                 <div class="list-group acountable">
                                    <table class="table table-bordered table-dark">
                                        <thead>
                                          <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Location</th>
                                            <th scope="col">Status</th>
                                           
                                          </tr>
                                        </thead>
                                        <tbody>
                                            <% for( let index = 0; index < datalen; index++ ) { %>
                                                <tr>
                                                    <th scope="row"><%= index + 1 %>  </th>
                                                    <td><%= data[index].name %> &nbsp; <%= data[index].model %>  <%= data[index].propertynumber %> </td>
                                                    <td><%= data[index].location %></td>
                                                    <td><a class="btn btn-info"><%= data[index].status %></a></td>
                                                   
                                                 </tr>
                                            <% } %>
                                            
                                           
                                         
                                        </tbody>
                                      </table>
                                   </div>
                             </div>
                      
                    </div>
                    
                    <script>
                        var acc = document.getElementsByClassName("accordion");
                        var i;

                        for (i = 0; i < acc.length; i++) {
                            acc[i].addEventListener("click", function() {
                                this.classList.toggle("active");
                                var panel = this.nextElementSibling;
                                if (panel.style.display === "block") {
                                    panel.style.display = "none";
                                } else {
                                    panel.style.display = "block";
                                }
                            });
                        }
                    </script>
                </div>


               
               
              
            </div>
          </div>
    </div>
   

</div>





