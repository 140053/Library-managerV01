            <div class="card-body">

             
                <div class="">
                    <style>
                        .accordion {
                                                                   
                            cursor: pointer;
                            padding: 10px;
                            width: 100%;
                            border: none;
                            text-align: left;
                            outline: none;
                            font-size: 9px;
                            transition: 0.4s;
                        }
                        
                        .accordion:hover {
                            background-color: #ccc; 
                        }
                        
                        .panel {
                            padding: 0 18px;
                            display: none;
                            background-color: white;
                            overflow: hidden;
                        }
                    </style>

                       
                      
                    <div class="listoffice">
                        <% for( let index = 0; index < Object.keys(data).length; index++ ) { %>
                            <button id= <%= data[index].id %>  onclick="getAcountableByOffice(this.id)"  class="accordion "  ><%= data[index].name %> 
                                <span class="badge badge-warning"> <%= Object.keys(data).length  %>  </span>
                                &nbsp; 
                                <span class="badge badge-pill badge-secondary  " data-toggle="tooltip" data-placement="top" title="">?</span> 
                            </button>
                             <div class="panel">
                                 <div class="list-group acountable">
         
                                    
                                     
                                    
                                   </div>
                             </div>
                        <% } %>

                       
     
                         
                    </div>
                    
                    <script>
                        var acc = document.getElementsByClassName("accordion");
                        var i;

                        for (i = 0; i < acc.length; i++) {
                            acc[i].addEventListener("click", function() {
                                this.classList.toggle("active");
                                var panel = this.nextElementSibling;
                                if (panel.style.display === "block") {
                                    panel.style.display = "none";
                                } else {
                                    panel.style.display = "block";
                                }
                            });
                        }
                    </script>
                </div>
            </div>
          </div>
    </div>
   

</div>




