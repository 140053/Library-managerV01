<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="mt-3">
                <div class="card">
                    <div class="card-header">
                        Add Patron Module
                    </div>
                    <div class="card-body">
                        <form action="/api/ingestpatron" method="post">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Name</label>
                                <input name="name" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="" placeholder="Name">
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputEmail4">Course</label>
                                    <input name="Kurso" type="Text" class="form-control" id="inputEmail4" placeholder="Abbreviation Only">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="inputPassword4"> ID number</label>
                                    <input name="IDnum" type="text" class="form-control" id="inputPassword4" placeholder="ID Number">
                                </div>
                            </div>


                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputCity">Address</label>
                                    <input name="address" type="text" class="form-control" id="inputCity">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputState">Year Level</label>
                                    <select name="year" id="inputState" class="form-control">
                                        <option selected>Choose...</option>
                                        <option value="first" >First Year</option>
                                        <option value="second" >Second Year</option>
                                        <option value="third" >Third Year</option>
                                        <option value="fourth" >Fourth Year</option>
                                        <option value="fifth" >Fifth Year</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputclass">Group</label>
                                    <select name="group" id="inputclass" class="form-control">
                                        <option selected>Choose...</option>
                                        <option value="Student" >Student</option>
                                        <option value="Faculty" >Faculty</option>

                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="inputclass">Date Applied</label>
                                    <input  class="form-control" name="dateapplied" type="datetime-local">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputclass">Date Expired</label>
                                    <input class="form-control" name="dateexpired" type="datetime-local">
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputState">Branch</label>
                                    <select name="branch" id="inputState" class="form-control">
                                        <option selected>Choose...</option>
                                        <option value="Pili Library" >Pili Library</option>

                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="inputclass">Gender</label>
                                    <select name="gender" id="inputclass" class="form-control">
                                        <option selected>Choose...</option>
                                        <option value="Male" >Male</option>
                                        <option value="Female" >Female</option>

                                    </select>
                                </div>

                            </div>






                            <button type="submit" class="btn btn-primary btn-block  ">Submit</button>
                        </form>
                    </div>
                </div>



            </div>
        </div>

    </div>
</div>
